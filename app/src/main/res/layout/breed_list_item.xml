<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <TextView
            android:id="@+id/cat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nombre"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/cat_name"
            android:layout_marginTop="10dp"/>
        <View
            android:id="@+id/card_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/cat_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pais"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_below="@+id/cat_image"
            android:layout_toLeftOf="@+id/card_center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/cat_iq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Inteligencia"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_below="@+id/cat_image"
            android:layout_toRightOf="@+id/card_center"
            android:gravity="center"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>